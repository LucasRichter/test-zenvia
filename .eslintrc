{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react"],
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "globalReturn": false
    },
    "babelOptions": {
      "configFile": "./babelrc"
    }
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "globals": {
    "mount": true,
    "shallow": true
  }
}